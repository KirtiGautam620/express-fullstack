generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Genre{
  id Int @id @default(autoincrement())
  name String
  url String
  books Book[]
}
model Book {
  id Int @id @default(autoincrement())
  title String
  summary String
  ISBN String
  genres Genre[]
  url String
  author Author?
}
model Author{
  id Int @id @default(autoincrement())
  first_name String
  family_name String
  date_of_birth DateTime
  date_of_death DateTime
  name String
  lifespan String
  book_id Int @unique
  url String
  book Book? @relation(fields:[book_id],references:[id])

}